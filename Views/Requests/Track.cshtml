@{
    ViewData["Title"] = "Şikayet Takip";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0"><i class="bi bi-search"></i> Şikayet Takip</h3>
            </div>
            <div class="card-body">
                <form asp-action="Track" method="post">
                    <div class="mb-3">
                        <label for="requestNumber" class="form-label">Şikayet Numarası</label>
                        <input type="text" class="form-control" id="requestNumber" name="requestNumber" 
                               placeholder="Örn: REQ-20250101-XXXXXXXX" required />
                        <small class="text-muted">Şikayet oluşturduğunuzda size verilen numarayı giriniz</small>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-search"></i> Şikayeti Ara
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

