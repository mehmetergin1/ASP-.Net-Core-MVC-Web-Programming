@model IEnumerable<CivicRequestPortal.Models.ServiceRequest>
@{
    ViewData["Title"] = "SLA Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="bi bi-clock-history"></i> Ortalama Çözüm Süresi</h2>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Toplam Şikayet</h5>
                <h2 class="mb-0">@ViewBag.TotalRequests</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Hedeflenen Süre İçinde</h5>
                <h2 class="mb-0">@ViewBag.AchievedRequests</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger">
            <div class="card-body">
                <h5 class="card-title">Hedeflenen Süre Aşıldı</h5>
                <h2 class="mb-0">@ViewBag.BreachedRequests</h2>
            </div>
        </div>
    </div>
</div>

<div class="card shadow">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0">Takip</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Şikayet No</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Gönderilme</th>
                        <th>Süre Bitiş</th>
                        <th>Durum</th>
                        <th>SüreDurumu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        var timeRemaining = request.SLADeadline.HasValue 
                            ? (request.SLADeadline.Value - DateTime.Now).TotalHours 
                            : 0;
                        <tr class="@(request.IsSLABreached ? "table-danger" : timeRemaining < 24 && timeRemaining > 0 ? "table-warning" : "")">
                            <td><strong>@request.RequestNumber</strong></td>
                            <td>@request.Title</td>
                            <td>@request.Category?.Name</td>
                            <td>@request.SubmittedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (request.SLADeadline.HasValue)
                                {
                                    @request.SLADeadline.Value.ToString("dd.MM.yyyy HH:mm")
                                }
                            </td>
                            <td>
                                <span class="badge bg-@(request.Status?.BadgeColor ?? "secondary")">
                                    @request.Status?.Name
                                </span>
                            </td>
                            <td>
                                @if (request.IsSLABreached)
                                {
                                    <span class="badge bg-danger">Aşıldı</span>
                                }
                                else if (request.SLADeadline.HasValue)
                                {
                                    if (timeRemaining < 0)
                                    {
                                        <span class="badge bg-danger">Aşıldı</span>
                                    }
                                    else if (timeRemaining < 24)
                                    {
                                        <span class="badge bg-warning">Kritik (@timeRemaining.ToString("F1") saat)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Aktif (@timeRemaining.ToString("F0") saat)</span>
                                    }
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">SLA takibi yapılan şikayet bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12 text-center">
        <a asp-controller="Dashboard" asp-action="Public" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Genel İstatistikler'e Dön
        </a>
    </div>
</div>

