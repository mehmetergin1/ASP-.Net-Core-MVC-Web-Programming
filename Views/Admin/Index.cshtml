@model IEnumerable<CivicRequestPortal.Models.ServiceRequest>
@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-shield-check"></i> Admin Paneli - Şikayet Yönetimi</h2>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Filtreler</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Durum</label>
                <select name="statusFilter" class="form-select">
                    <option value="all" selected="@(ViewBag.StatusFilter == "all")">Tümü</option>
                    @foreach (var status in ViewBag.Statuses)
                    {
                        <option value="@status.StatusId" selected="@(ViewBag.StatusFilter == status.StatusId.ToString())">
                            @status.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Kategori</label>
                <select name="categoryFilter" class="form-select">
                    <option value="all" selected="@(ViewBag.CategoryFilter == "all")">Tümü</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.CategoryId" selected="@(ViewBag.CategoryFilter == category.CategoryId.ToString())">
                            @category.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i> Filtrele
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow">
    <div class="card-header bg-light">
        <h5 class="mb-0">Şikayetler (@Model.Count())</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Şikayet No</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                        <th>Öncelik</th>
                        <th>Tarih</th>
                        <th>SLA</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td><strong>@request.RequestNumber</strong></td>
                            <td>@request.Title</td>
                            <td>@request.Category?.Name</td>
                            <td>
                                <span class="badge bg-@(request.Status?.BadgeColor ?? "secondary")">
                                    @request.Status?.Name
                                </span>
                            </td>
                            <td>
                                @if (request.Priority == 1)
                                {
                                    <span class="badge bg-danger">Yüksek</span>
                                }
                                else if (request.Priority == 2)
                                {
                                    <span class="badge bg-warning">Orta</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">Düşük</span>
                                }
                            </td>
                            <td>@request.SubmittedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (request.IsSLABreached)
                                {
                                    <span class="badge bg-danger">Aşıldı</span>
                                }
                                else if (request.SLADeadline.HasValue)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@request.RequestId" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Detay
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">Şikayet bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

